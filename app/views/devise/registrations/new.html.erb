<h2 class = "center">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "col-md-2 col-md-offset-5 col-lg-2 col-lg-offset-5 col-sm-2 col-sm-offset-5 center form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
    <%= f.input :number, input_html: {value: "+27"}, required: true, autofocus: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-warning" %>
  </div>
  <br>
  <%= render "devise/shared/links" %>
<% end %>


